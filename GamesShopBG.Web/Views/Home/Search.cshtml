@model  HomeIndexGamesListingsViewModel

@{
    ViewBag.Title = "Search";
}

<h2 class="text-default">@GlobalResources.ViewHomeSearchSearchingResult "@Model.SearchText"</h2>

@if (Model.Games.Any())
{
    <h3 class="text-default">@GlobalResources.ViewHomeSearchFoundGames</h3>

    <div class="row">
        @Html.Partial("_GamesListingPartial", Model.Games)
    </div>
}
else
{
    <h3 class="text-default">@GlobalResources.ViewHomeSearchNoGamesToShow</h3>
}