@model  GamesDetailsServiceModel

@{
    ViewBag.Title = $"{Model.Title} Details";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-block">
            <div class="card-text-center">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h3 class="text-center">@ViewData["Title"]</h3>
                    </li>
                    <li class="list-group-item container-default">
                        <b>@GlobalResources.ViewGamesDetailsGameTrailer</b>
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <b>@GlobalResources.ViewGamesDetailsSize</b> @Model.Size.ToString("f") GB
                    </li>
                    <li class="list-group-item">
                        <b>@GlobalResources.ViewGamesDetailsPrice</b> @Model.Price.ToString("c")
                    </li>
                    <li class="list-group-item">
                        <b>@GlobalResources.ViewGamesDetailsReleaseDate</b> @Model.ReleaseDate.ToShortDateString()
                    </li>
                    <li class="list-group-item">
                        <b>@GlobalResources.ViewGamesDetailsDescription</b> @Model.Description
                    </li>
                    <li class="list-group-item">
                        @Html.ActionLink(GlobalResources.ViewHomeIndexPartialAddToCart, "AddToCart", "ShoppingCart", new { area = "", id = Model.Id }, new { @class = "btn" })
                    </li>
                </ul>
                @if (User.IsInRole(GlobalConstants.ModeratorRole))
                {
                    <div class="text-right">
                        @Html.ActionLink(GlobalResources.ViewGamesEdit, "Edit", "Games", new { area=$"{GlobalConstants.ModeratorArea}", id=Model.Id}, new { @class="btn btn-warning"})
                        @Html.ActionLink(GlobalResources.ViewGameDelete, "Delete", "Games", new {area = $"{GlobalConstants.ModeratorArea}", id=Model.Id }, new { @class = "btn btn-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

