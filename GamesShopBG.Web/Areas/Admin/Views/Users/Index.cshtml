@model UsersListingViewModel
@{
    ViewBag.Title = "User Administration";
}

<h2 class="text-default">@ViewBag.Title</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                E-mail
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <th>
                    @user.Username
                </th>
                <th>
                    @user.Email
                </th>
                <th>
                    <form asp-action="AddToRole" method="post">
                        <div class="row">
                            <div class="col-md-9">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                            </div>
                            <div class="col-md-3">
                                <input class="btn btn-sm btn-edited" type="submit" value="Add To Role" />
                            </div>
                        </div>
                    </form>
                    @if (User.IsInRole(GlobalConstants.AdminRole) && user.Username != User.Identity.Name)
                    {
                        using (Html.BeginForm("DeleteUser", "Users", new { area = "Admin" },  FormMethod.Get, new { userId = user.Id}))
                        {
                            <div class="row">
                                <div class="col-md-9">
                                    <button class="btn btn-sm btn-edited" type="submit">
                                        <span style="color:red">Delete User</span>
                                    </button>
                                </div>
                            </div>
                        }
                    }
                </th>
            </tr>
        }
    </tbody>
</table>